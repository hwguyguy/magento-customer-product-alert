<?xml version="1.0"?>
<config>
	<modules>
		<Hwguyguy_CustomerProductAlert>
			<version>0.0.2</version>
		</Hwguyguy_CustomerProductAlert>
	</modules>
	<global>
		<blocks>
			<hwguyguy_customerproductalert>
				<class>Hwguyguy_CustomerProductAlert_Block</class>
			</hwguyguy_customerproductalert>
		</blocks>
		<helpers>
			<hwguyguy_customerproductalert>
				<class>Hwguyguy_CustomerProductAlert_Helper</class>
			</hwguyguy_customerproductalert>
		</helpers>
	</global>
	<frontend>
		<routers>
			<hwguyguy_customerproductalert>
				<use>standard</use>
