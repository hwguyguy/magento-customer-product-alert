					<frontName>customer-product-alert</frontName>
				</args>
			</hwguyguy_customerproductalert>
		</routers>
		<layout>
			<updates>
				<hwguyguy_customerproductalert>
					<file>hwguyguy/customerproductalert.xml</file>
